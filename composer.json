  "require": {
    "enqueue/sqs": "^0.10.0",
    "brighte/brighte-ms-standards": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "^3.4",
    "php": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "BrighteCapital\\QueueClient\\": "src"
    }
  },
  "scripts": {
    "cs": "vendor/bin/phpcs -ps --standard=PSR2 src/",
    "cbf": "vendor/bin/phpcbf --standard=PSR2 src/",
    "phpunit": "vendor/bin/phpunit --testdox --colors=always"
  }
}
